FROM golang:1.23-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY cmd/ ./cmd/
COPY pkg/ ./pkg/

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o /go/bin/app ./cmd

# Final stage
FROM scratch

# Copy the binary from builder
COPY --from=builder /go/bin/app /app

# Copy any additional required files
COPY migrations/ /migrations/

EXPOSE 4000

CMD ["/app"]
